<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.weilongzhang.coder.zhangwl.MainActivity">

    <Button
        android:onClick="refresh"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:text="刷新"
        android:layout_height="wrap_content"/>

    <com.weilongzhang.coder.zhangwl.customview.ProgressCircle
        android:id="@+id/rp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android_custom:roundColor="#D1D1D1"
        android_custom:roundProgressColor="@android:color/holo_blue_dark"
        android_custom:textColor="#00ff00"
        android_custom:textSize="40sp"
        android_custom:textIsDisplayable="true"
        android_custom:backgroundRoundWidth="10dip"
        android_custom:frontRoundWidth="5dp"
        android_custom:shape="ARC"
        android_custom:startAngle="-90"
        android_custom:sweepAngle="360"/>
    <TextView
        android:id="@+id/tv_onclick"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:text="textview onclick"
        android:gravity="center"
        android:clickable="false"
        android:background="@android:color/holo_red_dark"
        android:layout_height="80dp"/>

</RelativeLayout>
